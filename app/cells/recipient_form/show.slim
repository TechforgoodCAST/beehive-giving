- else
  .uk-grid.uk-form.form
    .uk-width-medium-1-1.name
      .label Organisation or project name
      = f.input :name, input_html: { class: 'large uk-width-1-1' }

    .uk-width-medium-1-1.uk-margin-top.recipient-country
      .label Where is your organisation or project based?
      .street-address.uk-margin-bottom
        = f.input :street_address, type: 'text', input_html: { class: 'large uk-width-1-1' }
      = f.input :country, input_html: { class: 'large uk-width-1-1 chosen-select' }, include_blank: true, priority: ['United Kingdom']

    .uk-width-medium-1-1.uk-margin-top.name
      .label How long has your organisation or project been operating for?
      = f.input :operating_for, collection: Recipient::OPERATING_FOR, input_html: { class: 'large uk-width-1-1' }

    .uk-width-medium-1-1.uk-margin-top.name
      .label What is the annual income of your organisation or project?
      = f.input :income_band, collection: Recipient::INCOME_BANDS, input_html: { class: 'large uk-width-1-1' }

    .uk-width-medium-1-1.uk-margin-top.name
      .label How many employees does your organisation or project have?
      = f.input :employees, collection: Recipient::EMPLOYEES, input_html: { class: 'large uk-width-1-1' }

    .uk-width-medium-1-1.uk-margin-top.name
      .label How many volunteers does your organisation or project have?
      = f.input :volunteers, collection: Recipient::EMPLOYEES, input_html: { class: 'large uk-width-1-1' }

    .uk-width-medium-1-1
      .uk-grid
        .uk-width-medium-1-2.uk-margin-top.website
          .label Your organisation or project's website
          = f.input :website, as: :url, input_html: { class: 'large uk-width-1-1' }
