    .uk-grid
      .uk-width-2-3
        %ul.nav{ class: current_user.role == 'Funder' ? 'funder' : 'recipient' }

          %li.muted
            = fund.funder.name.truncate(14)
          %span &rsaquo;

          %a{href: fund_path(fund)}
            %li{ class: ('active' if current_page?(fund_path(fund))) }
              = fund.name.truncate(14)
              .highlight
          %span &rsaquo;

          %a{href: recipient_eligibility_path(fund)}
            %li{ class: ('active' if params[:controller] == 'recipients' && %w(eligibility update_eligibility).include?(params[:action])) }
              Eligiblity
              .highlight
          %span &rsaquo;

