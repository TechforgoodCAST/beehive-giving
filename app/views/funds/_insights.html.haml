%div.markdown
  = raw(fund.description_html)

%p.my10.fs15.mid-gray
  = cell(:fund_insight, fund, proposal: @proposal).call(:data_source)

%h4.mb20.mt20.fs20.mid-gray
  - if fund.period_end.present? && fund.period_end > 3.years.ago
    = period(fund)
  - else
    = period(fund)
    %span.year.muted (recommendation based on older data)

- unless fund.open_call?
  %div.cta Please note this fund does not accept unsolicited applications. Please read the fund guidance for more information.

%ul.insights
  %li<
    = cell(:fund_insight, fund).call(:amount)

  - if @proposal && !@recipient.transferred?
    - if @proposal.suitability[fund.slug]['amount']['score'].positive?
      %li<
        %strong= number_to_percentage((@proposal.suitability[fund.slug]['amount']['score'] * 100), precision: 0)
        of funding was similar to the
        %strong amount
        you're seeking.

  %li<
    = cell(:fund_insight, fund).call(:duration)

  - if @proposal && !@recipient.transferred?
    - if @proposal.suitability[fund.slug]['duration']['score'].positive?
      %li<
        %strong= number_to_percentage((@proposal.suitability[fund.slug]['duration']['score'] * 100), precision: 0)
        of funding was similar to the
        %strong duration
        you're seeking.

  - if fund.open_data && fund.grant_count
    %li<
      Awarded
      %strong= number_with_delimiter(fund.grant_count)
      = "grant".pluralize(fund.grant_count) + '.'
      %a.action{href: proposal_fund_path(@proposal, fund, anchor: 'how-was-funding-distributed')} More info

  - if fund.open_data? && fund.award_month_distribution?
    %li<
      Awarded the most funding in
      = succeed '.' do
        %strong= top_award_months(fund)
      %a.action{href: proposal_fund_path(@proposal, fund, anchor: 'when-was-funding-awarded')} More info

  - if fund.open_data? && fund.country_distribution?
    %li<
      Awarded most funding in the
      = succeed '.' do
        %strong= top_countries(fund)
      %a.action{href: proposal_fund_path(@proposal, fund, anchor: 'where-was-funding-awarded')} More info

  %li<
    = cell(:fund_insight, fund).call(:grant_examples)
