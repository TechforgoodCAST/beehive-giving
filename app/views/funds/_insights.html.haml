%p= raw(fund.description)
= period(fund)

%ul.insights
  - unless params[:controller] == 'recipients' && %w(eligibility update_eligibility apply).include?(params[:action])
    - unless @proposal.eligibility_for(fund).negative?
      %li{ class: (@proposal.eligible?(fund) ? 'eligible' : 'ineligible')}
        - if @proposal.eligible?(fund)
          %a.badge{href: eligible_funds_path} Eligible
          You are eligible for funding.
          %a.action{href: fund_eligibility_path(fund)} See criteria
        - else
          %a.badge{href: ineligible_funds_path} Ineligible
          You are ineligible for funding.
          %a.action{href: fund_eligibility_path(fund)} Find out why

  - if @proposal && !@recipient.transferred?
    -# TODO:
    - if @proposal.recommendation(fund).grant_amount_recommendation.positive?
      %li
        %strong= number_to_percentage((@proposal.recommendation(fund).grant_amount_recommendation * 100), precision: 0)
        of funding was similar to the
        %strong amount
        you're seeking.
    -# TODO:
    - if @proposal.recommendation(fund).grant_duration_recommendation.positive?
      %li
        %strong= number_to_percentage((@proposal.recommendation(fund).grant_duration_recommendation * 100), precision: 0)
        of funding was similar to the
        %strong duration
        you're seeking.

  - if fund.open_data && fund.grant_count
    %li
      Awarded
      .highlight= number_with_delimiter(fund.grant_count)
      grants.
      %a.action{href: fund_path(fund, anchor: 'how-was-funding-distributed')} More info

  - if fund.open_data? && fund.award_month_distribution?
    %li
      Awarded the most funding in
      = succeed '.' do
        %strong= top_award_months(fund)
      %a.action{href: fund_path(fund, anchor: 'when-was-funding-awarded')} More info

