.locked-funder
  .uk-grid
    .uk-width-medium-1-3
      .card
        -# TODO: refactor
        - if @current_user.feedbacks.count.positive?
          .thumbnail
            .funder{class: (@tag.present? ? 'locked' : fund.funder.slug)}
        - else
          %a.why-hidden{ onclick: "goog_report_conversion('#why-hidden')", alt: (@tag.present? ? scramble_name(fund.name) : fund.name) }
            .thumbnail
              .funder{class: (@tag.present? ? 'locked' : fund.funder.slug)}
        .details
          .content.center
            = cell(:coming_soon_link).call(:show, 'Show fund', 'uk-width-1-1 uk-button uk-button-primary uk-button-large')
          .content.center
            = cell(:coming_soon_link).call(:show, 'Why is this hidden?')

    .uk-width-medium-2-3
      %h3.uk-margin-top
        -# TODO: refactor
        - if @current_user.feedbacks.count.positive?
          = link_to (@tag.present? ? scramble_name(fund.name) : fund.name), fund_path(fund), class: (@tag.present? ? 'yellow redacted large': 'yellow')
        - else
          = cell(:coming_soon_link).call(:show, (@tag.present? ? scramble_name(fund.name) : fund.name), (@tag.present? ? 'yellow redacted large': 'yellow'))
        %span.year.muted
          %span.redacted= scramble_name(fund.funder.name)

      %p.redacted.muted= scramble_name(raw(fund.description))

      %ul.insights
        - 5.times do |i|
          %li
            .action.redacted.muted= redacted_insights
            - if i < 2
              .action.redacted.yellow= redacted_actions

      - if fund.tags?
        .uk-margin-top= render_redacted_tags(fund)
