= content_for :title, 'Set a new password'

:javascript
  mixpanel.track('View Edit Password Resets Page');


%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, 'Reset your password' => new_password_reset_path, 'Set a new password' => nil

%main
  %section.maxw790.mx-auto
    .mx40.mb80
      %h1.center.mb20 Set a new password
      .maxw790.mx-auto.mb40
        .fs18.lh25.slate.center Someone (presumably you) has requested to reset your password.

      %p.mb20
        Enter your new password into the 'New password' field below, repeat this for the 'Password confirmation' field and click 'Change password' to set your new password.

      %p.mb20
        More detailed instructions can be found
        = succeed ',' do
          = link_to 'here', faq_path(anchor: 'set-password'), class: 'blue'
        or you can get in touch with
        = link_to 'support', 'mailto:support@beehivegiving.org', class: 'blue'
        who'll be happy to help.

      %hr.maxw790.my20

      = simple_form_for @password_reset, url: password_reset_path(params[:id]), method: :patch do |f|
        .mb20= f.input :password
        .mb20= f.input :password_confirmation
        = f.button :button, 'Change password', class: 'btn-wide white bg-blue truncate', data: { disable_with: 'Changing...' }
