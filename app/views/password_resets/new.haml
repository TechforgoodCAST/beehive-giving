= content_for :title, 'Reset your password'

:javascript
  mixpanel.track('View New Password Resets Page');

%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, 'Reset your password' => new_password_reset_path

%main
  %section.maxw790.mx-auto
    .mx40.mb80
      %h1.light.center.mb20 Reset your password
      .maxw790.mx-auto.mb40
        .fs18.lh25.slate.center This page allows you to request a password reset email.

      %p.mb20
        Please enter the email address you used to create your Beehive account in the 'Email' field below, and click 'Reset password'.

      %p.mb20
        More detailed instructions can be found
        = succeed ',' do
          = link_to 'here', faq_path(anchor: 'reset-password'), class: 'blue'
        or you can get in touch with
        = link_to 'support', 'mailto:support@beehivegiving.org', class: 'blue'
        who'll be happy to help.

      %hr.maxw790.my20

      = simple_form_for @password_reset do |f|
        .mb20
          .fs15.bold.mb10 Email
          = f.input :email
        = f.button :button, 'Reset password', class: 'button-wide white bg-olive caps truncate', data: { disable_with: 'Resetting...' }
