:javascript
  mixpanel.track("View New Password Resets Page");

.uk-container.uk-container-center
  .uk-grid.uk-margin-large.uk-margin-large-top
    .uk-width-1-1.uk-margin
      %h2 Reset your password
      = form_tag password_resets_path, method: 'post', class: 'uk-panel uk-panel-box uk-form' do
        .uk-form-row
          = text_field_tag :user_email, params[:user_email], placeholder: 'Email', type: 'email', class: 'uk-width-1-1'
        .uk-form-row
          = submit_tag 'Reset Password', class: 'uk-width-1-1 uk-button uk-button-primary', style: 'color: #fff'
