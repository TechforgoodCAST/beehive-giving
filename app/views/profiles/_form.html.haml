      = f.input :who_pays, collection: Profile::WHO_PAYS, error: false, type: 'text', input_html: { class: 'uk-width-1-1' }
      .uk-form-password-toggle
        = f.error :who_pays, class: 'uk-text-small uk-text-warning'
