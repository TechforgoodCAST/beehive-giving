.uk-grid
  = f.hidden_field :year, value: Date.today.year
  .uk-width-1-1
    %label.uk-form-label Location
  .uk-width-1-1
    %label Where does your organisation benefit people?
    .uk-form-controls{style: 'position: relative;'}
      = f.association :districts, error: false, label_method: :label, value_method: :id, input_html: {class: 'chosen-select'}
      .uk-form-password-toggle
        = f.error :districts, class: 'uk-text-small uk-text-warning'

