.uk-container.uk-container-center
  .uk-grid.uk-margin-.uk-margin-top
    %h2.uk-margin-top Your profiles
  .uk-width-1-1.uk-margin
    = link_to 'New profile', new_recipient_profile_path(current_user.organisation), class: 'uk-button uk-button-success'
    .uk-width-medium-3-4.uk-margin
      - if @profiles.any?
        .uk-grid
          - @profiles.each do |profile|
            .uk-width-medium-1-3
              .uk-panel.uk-panel-box.uk-margin-bottom
                .uk-width-medium-1-1
                  = link_to "Edit #{profile.year}", edit_recipient_profile_path(current_user.organisation, profile), class: 'uk-button uk-button-primary uk-width-1-1'
