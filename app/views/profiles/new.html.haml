:javascript
  mixpanel.track("Page View", {"Page Name": "New Profile"});
  mixpanel.track_forms("#new_profile", "Create Profile Form");

:javascript
  var google_conversion_id = 958190855;
  var google_conversion_language = "en";
  var google_conversion_format = "3";
  var google_conversion_color = "ffffff";
  var google_conversion_label = "2cu5CMnWrF8Qh6rzyAM";
