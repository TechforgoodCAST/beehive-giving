- if @profile.state == 'location' || @profile.state == 'complete'
  = javascript_include_tag 'chosen-jquery'
  = javascript_include_tag 'chosen'
  = stylesheet_link_tag 'chosen'
  = stylesheet_link_tag 'overrides/chosen_overrides'

:javascript
  mixpanel.track("View Profile #{@profile.state.capitalize} Page");

- if @profile.state == 'complete'
  #bg-color
    .uk-container.uk-container-center
      .uk-grid.uk-margin-large.uk-margin-large-top
        .uk-width-medium-1-1.uk-animation-fade
          .uk-vertical-align.uk-text-center{:style => "min-height: 480px;"}
            .uk-width-large-2-3.uk-vertical-align-middle.uk-text-left
              %h2
                Update
                = "#{@profile.year}'s"
                profile
              .uk-animation-fade= render partial: "profiles/states/#{@profile.state}"

- else
  - content_for :signup do
    = render partial: 'funders/static_background'

  #edit-profile-modal.uk-modal
    .uk-modal-dialog
      = render partial: "profiles/states/#{@profile.state}"
    = render 'snippets/need_help'

  :javascript
    var modal = $.UIkit.modal('#edit-profile-modal');
    modal.options.bgclose = false;
    modal.options.keyboard = false;
    modal.show();
