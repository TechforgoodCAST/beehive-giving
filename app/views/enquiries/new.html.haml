= content_for :title, "Apply to #{@fund.title}, #{@fund.subtitle}"

%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, (@proposal.title? ? @proposal.title : 'Current proposal').upcase_first => nil, 'Funds' => proposal_funds_path(@proposal), @fund.funder.name => nil, @fund.name => proposal_fund_path(@proposal, @fund), 'Apply' => apply_proposal_fund_path(@proposal, @fund)

:javascript
  mixpanel.track("View Apply Page", {"Fund": "#{@fund.name}"});

/ Google Code for View funder apply page
