= content_for :title, "Apply to #{@fund.name}, #{@fund.funder.name}"

:javascript
  mixpanel.track("View Apply Page", {"Fund": "#{@fund.name}"});

:javascript
  var google_conversion_id = 937505505;
  var google_conversion_language = "en";
  var google_conversion_format = "3";
  var google_conversion_color = "ffffff";
  var google_conversion_label = "8GqLCMWurGMQ4eWEvwM";
  var google_remarketing_only = false;
%script{:src => "//www.googleadservices.com/pagead/conversion.js", :type => "text/javascript"}
%noscript
  %div{:style => "display:inline;"}
    %img{:alt => "", :height => "1", :src => "//www.googleadservices.com/pagead/conversion/937505505/?label=8GqLCMWurGMQ4eWEvwM&amp;guid=ON&amp;script=0", :style => "border-style:none;", :width => "1"}/

= render partial: 'funds/fund_subnav', locals: { fund: @fund }

.uk-container.uk-container-center.uk-margin-large.uk-margin-large-top.uk-animation-fade
  .uk-grid
    .uk-width-medium-1-3
      = render partial: 'funds/card', locals: { fund: @fund }

    .uk-width-medium-2-3
      %h3.uk-margin-top
        Apply to
        = @fund.name
      %p.uk-margin-bottom
        If you haven't already, be sure to explore our analysis of
        = succeed ',' do
          = link_to "#{@fund.name}", proposal_fund_path(@proposal, @fund)
        otherwise below are a few things to consider before you proceed.

      %hr.thick

      .uk-panel
        %h4.uk-text-bold Key criteria
        = raw(@fund.key_criteria)
        -# TODO:
        -# - if @fund.match_funding_restrictions?
        -#   %h4.uk-text-bold Match funding restrictions
        -#   = raw(@fund.match_funding_restrictions)

        = link_to "Apply to #{@fund.name}", apply_proposal_fund_path(@proposal, @fund), method: :post, target: '_blank', 'data-uk-tooltip': "{pos:'top'}", title: 'A new page will be opened with application details', class: 'uk-button uk-button-primary uk-button-large uk-width-large-2-5 uk-float-right'
