#bg-color{style: 'border-bottom: solid 3px #EAEAEA;'}
  .uk-container.uk-container-center
    .uk-grid
      = render partial: 'recipients/sections/header'

      .uk-width-medium-1-1.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: 'height: 220px;'}
        .uk-vertical-align-middle
          .uk-panel.uk-panel-box#panel
            %p Step 1 of 3

#bg-color{style: 'background: #454545'}
  .uk-container.uk-container-center.uk-animation-fade
    .uk-margin-large-top.uk-margin-large-bottom
      %h2.uk-text-center.upcase.white Let's see if you're eligible...
      .uk-panel.uk-panel-box#panel
        .uk-form.uk-form-stacked
          = simple_form_for [@funder, @eligibility] do |f|
            - @funder.restrictions.order(:created_at).each_with_index do |r, i|
              .uk-width-1-1.uk-margin-bottom
                %label.uk-form-label
                  Are you seeking funding for
                  = succeed '?' do
                    = r.details
                = f.input :"restriction#{i+1}", as: :select, input_html: { class: 'uk-width-1-1' }
                = f.error :"restriction#{i+1}", class: 'uk-text-small uk-text-warning'
            .uk-grid
              - if @eligibility.valid?
                .uk-width-1-1
                  = f.submit 'Next', class: 'uk-button uk-button-primary uk-width-1-1', style: 'color: #fff;'
              - else
                .uk-width-1-2
                  = link_to 'Back', recipient_comparison_path(@funder), class: 'uk-button uk-width-1-1'
                .uk-width-1-2
                  = f.submit 'Next', class: 'uk-button uk-button-primary uk-width-1-1', style: 'color: #fff;'
