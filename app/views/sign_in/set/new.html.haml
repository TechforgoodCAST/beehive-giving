= content_for :title, 'Set a password'

.bg-rich-blue
  .maxw1050.mx-auto.px15.vh100.flex.flex-column
    .f1.flex.justify-center.items-center.my40
      %section.col1
        .center.mb20
          = link_to(root_path) do
            = image_tag('logo.svg', width: 102)

        .bg-white.rounded.shadow.mb20
          .bg-ice.p20.border-bottom.border-mist.rounded-top
            %h1.h4.bold
              Set a password
          .p20
            = simple_form_for @form, url: sign_in_set_path do  |f|
              .mb20
                .label Email
                =obscure_email(@user.email)
              .mb20
                = f.input :password, autofocus: true
              .mb20= f.input :password_confirmation
              = f.submit 'Continue', class: 'btn-wide bg-rich-blue white shadow', data: { disable_with: 'Setting...' }

    = render partial: 'shared/footer', locals: { color: @color = 'white' }