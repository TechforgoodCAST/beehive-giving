= content_for :title, 'Sign in'

%main.bg-rich-blue.flex.justify-center.items-center.py40
  %section.col1.px15
    .center.mb20
      = link_to(root_path) do
        = image_tag('logo.svg', width: 102)

    .bg-white.rounded.shadow
      .bg-ice.p20.border-bottom.border-mist.rounded-top
        %h1.h4.bold Sign in
      .p20
        = simple_form_for @form, url: sign_in_lookup_path do |f|
          .mb20
            = f.input :email, autofocus: true, input_html: { value: params[:email] }
          = f.submit 'Next', class: 'btn-wide bg-rich-blue white shadow', data: { disable_with: 'Finding...' }

.bg-rich-blue
  = render partial: 'shared/footer', locals: { color: 'white' }