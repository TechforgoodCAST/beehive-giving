#bg-color{style: 'border-bottom: solid 3px #EAEAEA;'}
  .uk-container.uk-container-center
    .uk-grid
      = render partial: 'recipients/sections/header'

      .uk-width-medium-1-1.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: 'height: 220px;'}
        .uk-vertical-align-middle
          .uk-panel.uk-panel-box#panel
            %p
              Find out if
              = @funder.name
              is recommended for your organisation.
            - if @funder.restrictions.any?
              - if @recipient.eligible?(@funder) || @recipient.eligibility_count(@funder) < @funder.restrictions.count
                = link_to 'Are you a good fit?', recipient_eligibility_path(@funder), class: 'uk-width-1-1 uk-button uk-button-primary uk-button-large'
              - else
                %button.uk-button.uk-button-large.uk-width-1-1{:disabled => "", style: "background: #d32c46; color: #fff;"}
                  %i.uk-icon-ban
                    Ineligible
            - else
              %a.uk-button.uk-button-primary.uk-button-large If no eligbility?
          -# %h1.stat-big 19%
          -# %h6.uk-text-bold.upcase Of funded organisations are similar to yours
          -# .uk-button.uk-button-primary.uk-button-large Send enquiry

= render partial: 'recipients/sections/overview'

