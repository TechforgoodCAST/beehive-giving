.uk-container.uk-container-center
  .uk-grid.uk-margin-large.uk-margin-large-top
    %h3.uk-margin Summary
    .uk-width-medium-1-1
      .uk-grid
        .uk-width-medium-1-4
          .uk-panel.uk-panel-box.uk-margin-bottom
            %ul.uk-nav.uk-nav-side
              %li.uk-nav-header Organisation
              %li
                %a{:href => "#about"}
                  Location
                  .uk-text-danger
                    - @current_organisation.profiles.first.districts.each do |d|
                      = d.label
              %li
                %a{:href => "#beneficiaries"}
                  Age
                  .uk-text-success
                    = @current_organisation.founded_on
              %li
                %a{:href => "#income"}
                  Income
                  .uk-text-primary
                    = @current_organisation.profiles.first.income
        .uk-width-medium-1-4
          .uk-panel.uk-panel-box.uk-margin-bottom
            %ul.uk-nav.uk-nav-side
              %li.uk-nav-header Beneficiaries
              %li
                %a{:href => ""}
                  Age
                  .uk-grid
                    .uk-width-1-2
                      .uk-text-danger
                        Min. age:
                        = @current_organisation.profiles.first.min_age
                    .uk-width-1-2
                      .uk-text-success
                        Max. age:
                        = @current_organisation.profiles.first.max_age
              %li
                %a{:href => ""}
                  Gender
                  .uk-text-success
                    = @current_organisation.profiles.first.gender
              %li
                %a{:href => ""}
                  Focus
                  .uk-text-primary
                    - @current_organisation.profiles.first.beneficiaries.each do |b|
                      = b.label
        .uk-width-medium-1-4
          .uk-panel.uk-panel-box.uk-margin-bottom
            %ul.uk-nav.uk-nav-side
              %li.uk-nav-header Team
              %li
                %a{:href => ""}
                  People
                  .uk-grid
                    .uk-width-1-2
                      .uk-text-danger
                        Staff:
                        = @current_organisation.profiles.first.staff_count
                    .uk-width-1-2
                      .uk-text-success
                        Volunteers:
                        = @current_organisation.profiles.first.volunteer_count
              %li
              %li
                %a{:href => ""}
                  Job roles
                  .uk-text-success
                    = @current_organisation.profiles.first.job_role_count
              %li
                %a{:href => ""}
                  Departments
                  .uk-text-primary
                    = @current_organisation.profiles.first.department_count
        .uk-width-medium-1-4
          .uk-panel.uk-panel-box.uk-margin-bottom
            %ul.uk-nav.uk-nav-side
              %li.uk-nav-header Work
              %li
                %a{:href => "#about"}
                  Goods or services?
                  .uk-text-danger
                    = @current_organisation.profiles.first.goods_services
              %li
              %li
                %a{:href => ""}
                  Implementation approach
                  .uk-text-success
                    - @current_organisation.profiles.first.implementations.each do |i|
                      = i.label
              %li
                %a{:href => ""}
                  Trading target
                  .uk-text-primary
                    - @current_organisation.profiles.first.markets.each do |m|
                      = m.label
    .uk-width-medium-3-4.uk-margin.uk-float-left
      .uk-grid
        .uk-width-medium-2-3
          .uk-panel.uk-panel-box.uk-margin-bottom
            %h3.uk-text-bold.uk-text-center
              Number of grants given
              %a{"data-uk-toggle" => "{target:'#grants_given_data'}"}
                %i.uk-icon-info-circle
            %p#grants_given
            %table.uk-table.uk-table-hover.uk-hidden#grants_given_data
              %caption Data table
              %thead
                %tr
                  %th Year
                  %th Average
                  %th Minimum
                  %th Maximum
              %tbody
                %tr
                  %th 2014
                  %td 4 grants
                  %td 3 grants
                  %td 5 grants
                %tr
                  %th 2013
                  %td ~8 grants
                  %td 7 grants
                  %td 8 grants
        .uk-width-medium-1-3.uk-margin-bottom
          .uk-panel.uk-panel-box
            %h3.uk-text-bold.uk-text-center
              Nov 2014 grants round
              %a{"data-uk-toggle" => "{target:'#grants_stages_data'}"}
                %i.uk-icon-info-circle
            %p#grants_stages
            %table.uk-table.uk-table-hover.uk-hidden#grants_stages_data
              %caption Data table
              %thead
                %tr
                  %th Stage
                  %th %
                  %th Count
              %tbody
                %tr
                  %td Grant
                  %td 5%
                  %td 3
                %tr
                  %td Application
                  %td 9%
                  %td 5
                %tr
                  %td Enquiry
                  %td 86%
                  %td 48
              %tfoot
                %tr
                  %td Total
                  %td 100%
                  %td 56
        .uk-width-medium-2-3
          .uk-panel.uk-panel-box.uk-margin-bottom
            %h3.uk-text-bold.uk-text-center Percentage(%) of grants by size
            %p#grants_distribution
        .uk-width-medium-2-3
          .uk-panel.uk-panel-box.uk-margin-bottom
            %h3.uk-text-bold.uk-text-center Average grant duration (days)
            %p#grants_duration
        .uk-width-medium-2-3
          .uk-panel.uk-panel-box.uk-margin-bottom
            %h3.uk-text-bold.uk-text-center Grant amount (Â£)
            %p#grants_amount_category
        .uk-width-medium-2-3
          .uk-panel.uk-panel-box.uk-margin-bottom
            %h3.uk-text-bold.uk-text-center Age of funded organisations (years)
            %p#org_age

    .uk-width-medium-1-4.uk-float-right
      .uk-panel.uk-panel-box{"data-uk-sticky" => "{top:92}"}
