          -#   = @funder.grants.count
          %p.uk-text-muted= @funder.mission
        %ul.uk-nav.uk-nav-side{"data-uk-scrollspy-nav" => "{closest:'li', smoothscroll:true}"}
          %li.uk-nav-header Contents
          %li
            %a{:href => "#about"} About
          %li
            %a{:href => "#beneficiaries"} Beneficiaries
