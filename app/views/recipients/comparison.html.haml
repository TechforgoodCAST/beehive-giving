          %li
            %a{:href => "#grants_location"} Location
          %li
            %a{:href => "#recipient_age"} Age
          %li
            %a{:href => "#recipient_income"} Income
          %li.uk-nav-header Beneficiaries
          %li
            %a{:href => "#beneficiaries_age"} Age
          %li
            %a{:href => "#beneficiaries_gender"} Gender
          %li
            %a{:href => "#beneficiaries_focus"} Focus
          %li.uk-nav-header Team
          %li
            %a{:href => "#recipient_staff"} Staff
          %li
            %a{:href => "#recipient_volunteers"} Volunteers
          %li.uk-nav-header Work
          %li
            %a{:href => "#recipient_implement"} Delivery Model
          %li
            %a{:href => "#recipient_goods_or_services"} Deliverables
          %li
            %a{:href => "#recipient_sells"} Business Model
