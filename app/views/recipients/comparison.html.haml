#bg-color
  .uk-container.uk-container-center
    .uk-grid
      = render partial: 'recipients/sections/header'

      .uk-width-medium-1-1.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: "height: 220px;"}
        .uk-vertical-align-middle
          .uk-panel.cta.shadow{"data-uk-sticky" => "{top:40, media: 959}"}
            - if @funder.restrictions.any?
              - if @recipient.questions_remaining?(@funder)
                %p
                  First things first. Let's see if you're eligible.
                = link_to 'Are you eligible?', recipient_eligibility_path(@funder), class: 'uk-width-1-1 uk-button uk-button-primary uk-button-large'
              - else
                - if @recipient.eligible?(@funder)
                  %p
                    You're eligible for one or more of
                    = succeed ',' do
                      = @funder.name.pluralize
                    funding streams. Now...
                  = link_to "Approach for funding", recipient_approach_funder_path(@funder), method: :post, remote: true, class: "uk-button uk-button-primary uk-width-1-1"
                  .uk-text-bold OR
                  = link_to "Find another funder", funders_path, class: "uk-button uk-button-primary uk-width-1-1"
                - else
                  %p
                    Drat! It looks like you're ineligible for
                    = @funder.name
                    why not try
                    = succeed '.' do
                      = link_to 'another funder', funders_path
                  %button.uk-button.uk-button-large.uk-width-1-1{:disabled => "", style: "background: #d32c46; color: #fff;"}
                    %i.uk-icon-ban
                      Ineligible
                  = link_to 'Made a mistake?', recipient_eligibilities_path(current_user.organisation), class: 'uk-text-small'
            - elsif Funder::CLOSED_FUNDERS.include?(@funder.name)
              %p Sorry, this funder has currently stopped accepting funding applications.
            - else
              %p What would you like to do next?
              %a.uk-button.uk-button-large.uk-button-primary.uk-width-1-1{"data-uk-modal" => "{target:'#next'}"} Next step

= render partial: 'recipients/sections/overview'

= render partial: 'recipients/sections/similar'

- if current_user_should_render_eligibility_modal?
  = render :partial => 'recipients/modals/eligibility'

- if @recipient.eligible?(@funder)
  = render partial: 'recipients/eligible'

- if params[:proceed]
  :javascript
    $.UIkit.modal("#eligible").show();

