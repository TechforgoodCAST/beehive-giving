= stylesheet_link_tag 'overrides/morris_overrides'
= javascript_include_tag 'raphael'
= javascript_include_tag 'morris'

#bg-color
  .uk-container.uk-container-center
    .uk-grid
      = render partial: 'recipients/sections/header'

      .uk-width-medium-1-1.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: "height: 220px;"}
        .uk-vertical-align-middle
          .uk-panel.cta.shadow{"data-uk-sticky" => "{top:40, media: 959}"}
            - if @funder.restrictions.any?
              - if @recipient.questions_remaining?(@funder)
                - if @recipient.profiles.where(year: Date.today.year).count == 0
                  %p Before you continue, get recommendations of which funders to look at
                  = link_to "Recommend funders", new_recipient_profile_path(@recipient), class: 'uk-button uk-button-large uk-button-primary uk-width-1-1 shadow bounce', id: 'mp-complete-profile'
                - elsif @recipient.locked_funder?(@funder) && @recipient.unlocked_funders.count < Recipient::MAX_FREE_LIMIT
                  %p Like what you see? Let's see if you're eligible.
                  = link_to "Check eligibility (#{(Recipient::MAX_FREE_LIMIT - @recipient.unlocked_funders.count)} left)", recipient_unlock_funder_path(@funder), method: :post, class: 'uk-button uk-button-large uk-button-primary uk-width-1-1 shadow bounce check-eligibility'
                - elsif !@recipient.locked_funder?(@funder)
                  %p Like what you see? Let's see if you're eligible.
                  = link_to 'Check eligibility', recipient_eligibility_path(@funder), class: 'uk-width-1-1 uk-button uk-button-primary uk-button-large shadow bounce'
                - else
                  %p
                    You can only check your eligibility with
                    = Recipient::MAX_FREE_LIMIT
                    funders at the moment. Help shape what we do next...
                  %a.uk-button.uk-button-large.uk-button-primary.uk-width-1-1.shadow.bounce{"data-uk-modal" => "{target:'#next'}"} Next step
              - else
                - if @recipient.eligible?(@funder)
                  %p
                    You're eligible for one or more of
                    = succeed ',' do
                      = @funder.name.pluralize
                    funding streams. Now...
                  = link_to "Approach for funding", '#approach', class: "uk-button uk-button-primary uk-width-1-1 shadow bounce", onclick: '$.UIkit.modal("#eligible").show();'
                  .uk-text-bold OR
                  = link_to "Find another funder", funders_path, class: "uk-button uk-button-primary uk-width-1-1 shadow bounce"
                - else
                  %p
                    Drat! It looks like you're ineligible for
                    = @funder.name
                    why not try
                    = succeed '.' do
                      = link_to 'another funder', funders_path
                  %button.uk-button.uk-button-large.uk-width-1-1{:disabled => "", style: "background: #d32c46; color: #fff;"}
                    %i.uk-icon-ban
                      Ineligible
                  = link_to 'Made a mistake?', recipient_eligibilities_path(current_user.organisation), class: 'uk-text-small'
            - elsif Funder::CLOSED_FUNDERS.include?(@funder.name)
              %p Sorry, this funder has currently stopped accepting funding applications.
            - else
              %p What would you like to do next?
              %a.uk-button.uk-button-large.uk-button-primary.uk-width-1-1.shadow.bounce{"data-uk-modal" => "{target:'#next'}"} Next step

= render partial: 'recipients/sections/overview'

= render partial: 'recipients/sections/similar'

- if @recipient.eligible?(@funder)
  = render partial: 'recipients/eligible'

- if params[:proceed]
  :javascript
    $.UIkit.modal("#eligible").show();

#next.uk-modal
  .uk-modal-dialog
    %a.uk-modal-close.uk-close
    :plain
