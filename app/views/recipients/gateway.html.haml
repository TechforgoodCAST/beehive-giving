.uk-container.uk-container-center
  .uk-grid.uk-margin
    .uk-width-medium-1-3.uk-float-left
      .uk-text-center.uk-vertical-align{style: 'height: 75px;'}
        %h3.uk-panel-title.uk-margin-remove.uk-vertical-align-middle
          = image_tag "logos/#{@funder.slug}-logo.png", alt: "#{@funder.name}"

    .uk-width-medium-1-3.uk-float-left
      = @recipient.profiles.inspect

      = @recipient.unlocked_funders.inspect

      - if @recipient.can_unlock_funder?(@funder)
        = link_to "Unlock Funder", "#"
      - elsif @recipient.profiles.count <= Recipient::PROFILE_MAX_FREE_LIMIT
        need to fill in complete profile
        = link_to "Complete Profile", "#"
      - else
        Nay, pay now =>


    .uk-width-medium-1-3.uk-float-left
      Pay (coming soon)
