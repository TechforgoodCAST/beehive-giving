.uk-container.uk-container-center
  .uk-grid.uk-margin.uk-margin-top
    .uk-width-medium-1-3.uk-margin-bottom
      .uk-text-center.uk-vertical-align{style: 'height: 75px;'}
        %h3.uk-margin-remove.uk-vertical-align-middle
          = image_tag "logos/#{@funder.slug}-logo.png", alt: "#{@funder.name}"
      .uk-text-center
        = @funder.mission

    .uk-width-medium-2-3.uk-margin-bottom
      .uk-panel.uk-panel-box
        - if @recipient.can_unlock_funder?(@funder)
          %p Now that you have completed a profile you can click below to see more tabs with information about this funder.
          = link_to "Unlock Funder", recipient_unlock_funder_path(@funder), class: 'uk-button uk-button-primary uk-width-1-1', method: :post
        - elsif @recipient.profiles.count <= Recipient::PROFILE_MAX_FREE_LIMIT
          %p In order to unlock a funder to view more tabs, please click below to complete a profile
          = link_to "Complete Profile", new_recipient_profile_path(@recipient, :redirect_to_funder => @funder.id), class: 'uk-button uk-button-primary uk-width-1-1'
        - else
          You can only unlock 3 funders on the free plan

