.uk-container.uk-container-center
  .uk-grid.uk-margin.uk-margin-top
    .uk-width-1-1.uk-margin

      - if @current_user.sign_in_count < 2
        .uk-alert{'data-uk-alert' => ''}
          %a.uk-alert-close.uk-close
          %p.uk-text-large Welcome to Beehive!
          %o Some help getting started...

      %h2 See if you're a good match for...

      .uk-grid
        .uk-width-medium-3-4
          -# .uk-grid
            -# .uk-width-3-4
            -#   %h2 See if you're a good match for...
            -# .uk-width-1-4
            -#   .uk-button.uk-float-right Sort
          .uk-grid
            - @funders.order('id asc').each do |funder|
              .uk-width-medium-1-3
                .uk-panel.uk-panel-box.uk-margin-bottom
                  .uk-width-medium-1-1{style: 'height: 75px;'}
                    %h3.uk-panel-title.uk-margin-remove
                      #org-logo{ class: "logo-#{funder.id}" }
                        = funder.name
                  .uk-width-medium-1-1
                    - if funder.active_on_beehive?
                      %a.uk-button.uk-button-primary.uk-width-1-1{ href: recipient_comparison_path(funder) } See how you fit
                    - else
                      - if @current_organisation.can_request_funder?(funder)
                        = link_to 'Request', vote_recipient_path(@current_organisation, data_requested: true, funder_id: funder.id), method: 'post', class: 'uk-button uk-width-1-1'
                      - else
                        %button.uk-button.uk-button-primary.uk-width-1-1{:disabled => "", :type => "button"}
                          %i.uk-icon-check Requested

            .uk-width-medium-1-3
              .uk-panel.uk-panel-box.uk-margin-bottom
                .uk-width-medium-1-1.uk-text-center.uk-vertical-align{:style => "height: 105px;"}
                  .uk-vertical-align-middle
                    %h3.uk-panel-title.uk-margin-remove.uk-text-muted
                      More coming soon...
        .uk-width-medium-1-4.uk-float-right
          .uk-panel.uk-panel-box{"data-uk-sticky" => "{top:60}"}
            %ul.uk-nav.uk-nav-side
              %li.uk-nav-header Recommended funders
              %li
                %a.uk-text-muted{:href => ""} Coming soon...
              %li.uk-nav-header Your enquiries
              %li
                %a.uk-text-muted{:href => ""} Coming soon...
