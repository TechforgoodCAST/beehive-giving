:javascript
  mixpanel.track("Page View", {"Page Name": "Recipient Dashboard"});
  mixpanel.track_forms("#funder_search", "Find Funders Form");
  mixpanel.track_links("#mp-the-foundation", "Clicked 'The Foundation' Link");

#bg-color{style: 'min-height: 550px'}
  .uk-container.uk-container-center.uk-animation-fade
    .uk-grid.uk-margin
      .uk-width-1-1.uk-margin

        %h2.uk-margin-top
          Dashboard
          %a.uk-text-small{"data-uk-modal" => "{target:'#about-dashboard'}"} What's this?

        .uk-grid.uk-margin-top-remove.uk-margin-bottom
          .uk-width-medium-1-3
            - unless @recipient.profiles.count > 0 && @recipient.attribute && @recipient.unlocked_funders.any? && @recipient.eligibilities.count > 1
              .uk-panel.uk-panel-box#panel.uk-margin-top-remove
                .uk-panel-title Get started
                %ol.uk-nav.uk-nav-side
                  - unless @recipient.profiles.count > 0
                    %li
                      %a{href: new_recipient_profile_path(@recipient, :redirect_to_funder => Funder.first)}
                        1. Add details to help match your organisation
                  - else
                    %li
                      %a.uk-text-muted
                        %strike 1. Add details to help match your organisation

                  - unless @recipient.attribute
                    %li
                      %a{href: new_recipient_attribute_path(@recipient)}
                        2. Add problem/solution
                  - else
                    %li
                      %a.uk-text-muted
                        %strike 2. Add problem/solution

                  - unless @recipient.unlocked_funders.any?
                    %li
                      %a{href: recipient_comparison_path(Funder.first)}
                        3. See how you compare with The Foundation
                  - else
                    %li
                      %a.uk-text-muted
                        %strike 3. See how you compare with The Foundation

                  - unless @recipient.eligibilities.count > 1 # refactor
                    %li
                      %a{href: recipient_eligibility_path(Funder.first)}
                        4. See if you're eligible for The Foundation
                  - else
                    %li
                      %a.uk-text-muted
                        %strike 4. See if you're eligible for The Foundation

            .uk-panel.uk-panel-box.uk-overlay-panel#panel
              %h3 Your recommended funders
              .uk-panel.uk-text-center.uk-vertical-align{style: 'border: 3px #ddd dashed; height: 110px;'}
                .uk-vertical-align-middle
                  %h3.uk-margin-top.uk-text-muted Coming soon...
            .uk-width-1-1.uk-button.uk-margin-bottom#mp-find-out-more{"data-uk-modal" => "{target:'#about-recommendation'}"} Find out more

            -# .uk-width-1-1
            -#   - if @recipient.attribute
            -#     = link_to 'Edit problem/solution', edit_recipient_attribute_path(@recipient, @recipient.attribute)
            -#   - else
            -#     = link_to 'Add problem/solution', new_recipient_attribute_path(@recipient)

            -#     %li
            -#       %a.uk-text-muted
            -#         %i.uk-icon-check-circle-o.uk-icon-small.uk-text-muted
            -#           Add problem
            -#     %li
            -#       %a
            -#         %i.uk-icon-circle-o.uk-icon-small
            -#           Add solution
            -#     %li
            -#       %a
            -#         %i.uk-icon-circle-o.uk-icon-small
            -#           Complete a profile for 2013
            -#     %li
            -#       %a
            -#         %i.uk-icon-circle-o.uk-icon-small
            -#           Get your first endorsment
            -# .uk-margin-bottom
            -#   = link_to 'Your profile', recipient_public_path(@recipient), class: 'uk-button uk-button-primary uk-width-1-1'

            -# .uk-panel.uk-panel-box#panel
            -#   .uk-panel-title Notifications
            -#   %ul.uk-nav.uk-nav-side
            -#     %li
            -#       %a.uk-text-success
            -#         %i.uk-icon-check-circle.uk-icon-small
            -#           A funder likes you
            -#         %div Paul Hamlyn Foundation thinks your a good fit
            -#     %li
            -#       %a.uk-text-warning
