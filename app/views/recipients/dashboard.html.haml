          .uk-width-medium-1-1
            .uk-grid.uk-margin-top-remove.uk-animation-fade{"data-uk-grid-match" => "{target:'.uk-panel'}"}
              .uk-width-medium-1-2.uk-margin-bottom
                .uk-panel.uk-panel-box#panel
                  .uk-panel-title.uk-text-center Eligible funders
                  .uk-text-center
                    %h1.uk-margin-top-remove.stat-big 1

