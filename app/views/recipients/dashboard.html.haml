:javascript
  mixpanel.track("Page View", {"Page Name": "Recipient Dashboard"});
  mixpanel.track_forms("#funder_search", "Find Funders Form");
  mixpanel.track_links("#mp-the-foundation", "Clicked 'The Foundation' Link");

#bg-color{style: 'border-bottom: solid 3px #EAEAEA;'}
  .uk-container.uk-container-center
    .uk-grid
      .uk-width-small-1-1.uk-width-medium-1-4.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: 'height: 220px;'}
        .uk-vertical-align-middle
          .uk-border-circle.uk-vertical-align{style: 'background: #fff; height: 160px; width: 160px; border: 3px solid #F7BA0E; padding: 10px;'}
            .uk-vertical-align-middle
              = @recipient.name
      .uk-width-small-1-1.uk-width-medium-3-4.uk-width-large-2-4.uk-vertical-align{style: 'height: 220px;'}
        .uk-vertical-align-middle
          %h6.uk-text-muted.uk-text-bold.upcase.uk-margin-bottom-remove Mission
          %p.uk-margin-top-remove= @recipient.mission
          .uk-grid
            - if @recipient.charity_number.present?
              %h6.uk-text-muted.uk-text-bold.upcase.uk-margin-bottom-remove Charity No:
              %p= @recipient.charity_number
            - if @recipient.company_number.present?
              %h6.uk-text-muted.uk-text-bold.upcase.uk-margin-bottom-remove Company No:
              %p= @recipient.company_number
      .uk-width-medium-1-1.uk-width-large-1-4.uk-vertical-align.uk-text-center{style: 'height: 220px;'}
        .uk-vertical-align-middle
          .uk-panel.uk-panel-box#panel
            .uk-text-center
              %h6.uk-text-bold.upcase Eligible funders
              = link_to "Count", recipient_eligibility_path(@funder), class: 'uk-width-1-1 uk-button uk-button-primary'
              %hr
              %h6.uk-margin-top-remove.uk-text-bold.upcase Recommended Funders
              .uk-width-1-1.uk-button{"data-uk-modal" => "{target:'#about-recommendation'}"} Find out more

#overview{style: 'background: #454545'}
  .uk-container.uk-container-center.uk-animation-fade
    %h2.uk-margin-large-top.uk-text-center.upcase.white Overview
    .uk-grid.uk-margin-bottom{"data-uk-grid-match" => "{target:'.match-height'}"}
      .uk-width-medium-1-3.uk-margin-bottom
        .match-height.uk-panel.uk-panel-box#panel
          .uk-panel-badge
            %i.uk-icon-eye.uk-text-muted{"data-uk-tooltip" => "{pos:'left'}", :title => "This is visible to funders you unlock."}
            %a
              %i.uk-icon-edit{"data-uk-tooltip" => "{pos:'left'}", :title => "Edit"}
          .uk-panel-title At a glance
          %dl.uk-description-list-horizontal
            %dt Website
            %dd
              %a{href: "http://#{@recipient.website}",  target: "_blank"}= @recipient.website
            %dt Contact number
            %dd= @recipient.contact_number
            -# %dt Address
            -# %dd= @recipient.full_address
          %hr
          .uk-grid.uk-text-center
            .uk-width-1-2
              %h6.uk-text-bold.upcase Age
              %h2.uk-margin-top-remove.stat-normal.stat-normal
                = ((Date.today - @recipient.founded_on).to_f / 365).round(1)
                %span.uk-text-small year(s) old
            .uk-width-1-2
              %h6.uk-text-bold.upcase Income
              %h2.uk-margin-top-remove.stat-normal
                - if @recipient.profiles.where('year = ? OR year = ?', Date.today.year, Date.today.year - 365).any?
                  = number_to_currency(@recipient.profiles.where('year = ? OR year = ?', Date.today.year, Date.today.year - 365).first.income, unit: 'Â£', precision: 0)
          %hr
          .uk-grid.uk-text-center
            .uk-width-1-2
              %h6.uk-text-bold.upcase Staff
              %h2.uk-margin-top-remove.stat-normal.stat-normal
                2
            .uk-width-1-2
              %h6.uk-text-bold.upcase Volunteers
              .uk-overlay.uk-width-1-1
                %h2.uk-margin-top-remove.stat-normal
                  - if @profile
                    = @profile.volunteer_count
                  - else
                    = link_to 'Add', new_recipient_profile_path(@recipient)
                %a.uk-overlay-area{href: edit_recipient_profile_path(@recipient, @profile)}
                  .uk-overlay-area-content Edit

          %hr
            %h6.uk-text-bold.upcase Countrie(s) targeted
            .uk-overlay
              - @recipient.profiles.where('year = ? OR year = ?', Date.today.year, Date.today.year - 365).first.countries.each do |country|
                = link_to country.name, funders_path(:'q[grants_country_eq]' => "#{country.alpha2}"), class: 'uk-button uk-button-small', style: 'margin-bottom: 3px;'
                %a.uk-overlay-area
                  .uk-overlay-area-content Edit
        -# .uk-width-1-1.uk-button.uk-button-primary.uk-button-large Similar organisations

      .match-height.uk-margin-bottom.uk-width-medium-2-3
        .uk-width-medium-1-1.uk-margin-bottom
          .uk-panel.uk-panel-box#panel
            .uk-panel-badge
              %i.uk-icon-eye.uk-text-muted{"data-uk-tooltip" => "{pos:'left'}", :title => "This is visible to funders you unlock."}
            .uk-panel-title Problem
            .uk-overlay.uk-width-1-1
              -# = @recipient.attribute.problem if @recipient.attribute
              -# %a.uk-overlay-area{href: edit_recipient_attribute_path(@recipient, @recipient.attribute)}
              -#   .uk-overlay-area-content Edit

        .uk-width-medium-1-1
          .uk-panel.uk-panel-box#panel
            .uk-panel-badge
              %i.uk-icon-eye.uk-text-muted{"data-uk-tooltip" => "{pos:'left'}", :title => "This is visible to funders you unlock."}
            .uk-panel-title Solution
            .uk-overlay.uk-width-1-1
              -# = @recipient.attribute.solution if @recipient.attribute
              -# %a.uk-overlay-area{href: edit_recipient_attribute_path(@recipient, @recipient.attribute)}
              -#   .uk-overlay-area-content Edit

