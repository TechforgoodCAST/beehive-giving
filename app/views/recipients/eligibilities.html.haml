:javascript
  mixpanel.track("View Edit Eligibilities Page");

.base.background
  .uk-container.uk-container-center
    .uk-grid.uk-margin-large.uk-margin-large-top
      .uk-width-medium-1-1.uk-animation-fade
        .uk-vertical-align.uk-text-center{:style => "min-height: 480px;"}
          .uk-width-large-1-2.uk-vertical-align-middle.uk-text-left
            .uk-animation-fade.uk-form.uk-form-stacked.uk-panel.uk-panel-box#panel.shadow
              .uk-panel-title Manage eligibility
              %fieldset
              = simple_form_for @recipient, :url => recipient_eligibilities_path(current_user.organisation) do |f|
                = f.simple_fields_for :eligibilities do |e|
                  .uk-width-1-1.uk-margin-bottom
                    %label.uk-form-label
                      Are you seeking funding for
                      = succeed '?' do
                        = raw(Restriction.find(e.object.restriction_id).details)
                    = e.hidden_field :recipient_id, value: @recipient.id
                    = e.hidden_field :restriction_id
                    = e.input :eligible, collection: @recipient.restriction_truthy(e.object.restriction), input_html: { class: 'uk-width-1-1' }
                    = e.error :eligible, class: 'uk-text-small uk-text-warning'
                = f.button :button, "Save", class: 'uk-button uk-button-primary uk-width-1-1', style: 'color: #fff;', data: {disable_with: "<i style='color: #999;' class='uk-icon uk-icon-circle-o-notch uk-icon-spin'></i><span style='color: #999;'> Saving...</span>"}
