= content_for :title, "Apply to #{@funder.name}"

:javascript
  mixpanel.track("View Apply Page", {"Funder": "#{@funder.name}"});

:javascript
  var google_conversion_id = 937505505;
  var google_conversion_language = "en";
  var google_conversion_format = "3";
  var google_conversion_color = "ffffff";
  var google_conversion_label = "8GqLCMWurGMQ4eWEvwM";
  var google_remarketing_only = false;
%script{:src => "//www.googleadservices.com/pagead/conversion.js", :type => "text/javascript"}
%noscript
  %div{:style => "display:inline;"}
    %img{:alt => "", :height => "1", :src => "//www.googleadservices.com/pagead/conversion/937505505/?label=8GqLCMWurGMQ4eWEvwM&amp;guid=ON&amp;script=0", :style => "border-style:none;", :width => "1"}/

= render partial: 'funders/subnav', locals: {funder: @funder}

.uk-container.uk-container-center.uk-margin-large.uk-margin-large-top.uk-animation-fade
  .uk-grid
    .uk-width-medium-1-3
      = render partial: 'recipients/funders/card', locals: { funder: @funder }

    .uk-width-medium-2-3
      %h3.uk-margin-top Apply for funding
      %p.uk-margin-bottom Below are details of the funds which you can apply to.

      %hr.thick

      - @funder.funding_streams.each_with_index do |stream, i|
        .uk-panel
          %h4.uk-text-bold= stream.label

          - if @recipient.funding_stream_eligible?(stream.label, @funder)
            %a.uk-panel-badge.badge.eligible{href: eligible_funders_path} Eligible

            %p
              If you haven't already, be sure to explore the profile for
              = succeed ',' do
                = link_to "#{@funder.name}", funder_path(@funder)
              otherwise here are a few things to consider before you proceed:

            = raw(@funder.attributes.order(created_at: :desc).where('funding_stream = ? OR funding_stream = ?', stream.label, 'All').first.soft_restrictions)

            = link_to 'Apply for funding', recipient_apply_path(@funder, funding_stream: stream.label), method: :post, target: '_blank', 'data-uk-tooltip' => "{pos:'top'}", :title => "#{@funder.name.pluralize} website will open in a new page", class: 'uk-button uk-button-primary uk-button-large uk-width-large-2-5 uk-float-right'

          - else
            %a.uk-panel-badge.badge.ineligible{href: ineligible_funders_path} Ineligible
            Sorry, it seems you are ineligible for this fund. Remember you can always update your answers to the eligiblity questions
            = succeed '.' do
              = link_to 'here', recipient_eligibility_path(@funder)

        - if i == @funder.funding_streams.count-1
          .cta.wide
            Be sure to check out your recommended funders.
            %a.uk-button.uk-button-large.uk-button-primary.invert{href: recommended_funds_path} Recommended funds
        - else
          %hr.thick
