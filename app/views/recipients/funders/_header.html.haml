%header.uk-container-center
  .uk-container.uk-container-center
    .header
      .header-contents
        %h1
          We found
          %span.yellow.x1-5 6
          funders for you!
        %h3 You are seeing funders that Beehive thinks would be suitable for you. Select one to find out more.
        .uk-button.uk-button-large.uk-button-primary Improve your results

.subnav-container.uk-container-center
  .uk-container.uk-container-center
    %ul.subnav
      %a{href: recommended_funders_path}
        %li.first{ class: ('active' if current_page?(recommended_funders_path)) }
          .subnav-contents
            Recommended
            %span 6
          .highlight
      %a{href: eligible_funders_path}
        %li{ class: ('active' if current_page?(eligible_funders_path)) }
          .subnav-contents
            Eligible
            %span= @recipient.recommendations.where(eligibility: 'Eligible').count
          .highlight
      %a{href: ineligible_funders_path}
        %li{ class: ('active' if current_page?(ineligible_funders_path)) }
          .subnav-contents
            Ineligible
            %span= @recipient.recommendations.where(eligibility: 'Ineligible').count
          .highlight
      %a{href: all_funders_path}
        %li{ class: ('active' if current_page?(all_funders_path)) }
          .subnav-contents
            All funders
            %span= Funder.where(active_on_beehive: true).count
          .highlight

    .name= @recipient.name.titleize
