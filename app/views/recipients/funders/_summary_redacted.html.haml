.uk-grid
  .uk-width-medium-1-3
    .card
      - if current_user.feedbacks.count > 0
        %a{href: funder_path(funder), alt: funder.name}
          .thumbnail
            .funder{class: funder.slug}
      - else
        %a{onclick: '$.UIkit.modal("#why-hidden").show();', alt: funder.name}
          .thumbnail
            .funder{class: funder.slug}
      .details
        .content.center
          %a.uk-width-1-1.uk-button.uk-button-primary.uk-button-large{href: funder_path(funder)} Show funder
        .content.center
          - if current_user.feedbacks.count > 0
            = link_to 'Why is this hidden?', funder_path(funder)
          - else
            = link_to 'Why is this hidden?', '', onclick: '$.UIkit.modal("#why-hidden").show();'

  .uk-width-medium-2-3
    %h3.uk-margin-top
      - if current_user.feedbacks.count > 0
        = link_to funder.name, funder_path(funder), class: 'yellow'
      - else
        = link_to funder.name, '', class: 'yellow', onclick: '$.UIkit.modal("#why-hidden").show();'
      %span.year.muted
        in
        = funder.current_attribute.year

    %ul.insights
      - 5.times do |i|
        %li
          .action.redacted.muted= redacted_insights
          - if i < 2
            .action.redacted.yellow= redacted_actions
