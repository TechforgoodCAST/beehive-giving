.locked-funder
  .uk-grid
    .uk-width-medium-1-3
      .card
        -# refactor
        - if current_user.feedbacks.count.positive?
          .thumbnail
            .funder{class: (@tag.present? ? 'locked' : fund.funder.slug)}
        - else
          %a{onclick: '$.UIkit.modal("#why-hidden").show();', alt: (@tag.present? ? scramble_name(fund.name) : fund.name)}
            .thumbnail
              .funder{class: (@tag.present? ? 'locked' : fund.funder.slug)}
        .details
          .content.center
            = link_to 'Show fund', '#why-hidden', class: 'uk-width-1-1 uk-button uk-button-primary uk-button-large', onclick: '$.UIkit.modal("#why-hidden").show();'
          .content.center
            = link_to 'Why is this hidden?', '#why-hidden', onclick: '$.UIkit.modal("#why-hidden").show();'

    .uk-width-medium-2-3
      %h3.uk-margin-top
        -# refactor
        - if current_user.feedbacks.count.positive?
          = link_to (@tag.present? ? scramble_name(fund.name) : fund.name), fund_path(fund), class: (@tag.present? ? 'yellow redacted large': 'yellow')
        - else
          = link_to (@tag.present? ? scramble_name(fund.name) : fund.name), '#why-hidden', class: (@tag.present? ? 'yellow redacted large': 'yellow'), onclick: '$.UIkit.modal("#why-hidden").show();'
        %span.year.muted
          %span.redacted= scramble_name(fund.funder.name)

      %p.redacted.muted= scramble_name(raw(fund.description))

      %ul.insights
        - 5.times do |i|
          %li
            .action.redacted.muted= redacted_insights
            - if i < 2
              .action.redacted.yellow= redacted_actions

      - if fund.tags?
        .uk-margin-top= render_redacted_tags(fund)
