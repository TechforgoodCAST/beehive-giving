%p= raw(fund.description)

%ul.insights
  - unless params[:controller] == 'recipients' && %w(eligibility update_eligibility apply).include?(params[:action])
    - if @recipient.load_recommendation(fund).eligibility
      %li{ class: (@recipient.eligible?(fund) ? 'eligible' : 'ineligible')}
        - if @recipient.eligible?(fund)
          %a.badge{href: eligible_funders_path} Eligible
          You are eligible for funding.
          %a.action{href: recipient_eligibility_path(fund)} See criteria
        - else
          %a.badge{href: ineligible_funders_path} Ineligible
          You are ineligible for funding.
          %a.action{href: recipient_eligibility_path(fund)} Find out why

  - if @recipient.has_proposal? && !@recipient.transferred?
    %li
      %strong= number_to_percentage((@recipient.load_recommendation(fund).grant_amount_recommendation * 100), precision: 0)
      of funding was similar to the
      %strong amount
      you're seeking.
    %li
      %strong= number_to_percentage((@recipient.load_recommendation(fund).grant_duration_recommendation * 100), precision: 0)
      of funding was similar to the
      %strong duration
      you're seeking.

  %li
    Awarded
    .highlight= number_with_delimiter(fund.grant_count)
    grants.
    %a.action{href: funder_path(fund, anchor: 'how-was-funding-distributed')} More info

