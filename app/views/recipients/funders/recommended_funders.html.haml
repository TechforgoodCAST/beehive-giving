= content_for :title, 'Recommended funders'

:javascript
  mixpanel.track("View Recommended Funders Page");
  mixpanel.identify('#{current_user.id}');
  mixpanel.people.set({
    'Funder Unlocks': '#{@recipient.recipient_funder_accesses_count}',
  });

- if @recipient.recipient_funder_accesses.any?
  :javascript
    mixpanel.people.set({
      'Last Unlocked Funder': '#{Funder.find(@recipient.recipient_funder_accesses.last.funder_id).name}',
      'Last Funder Eligibility': '#{@recipient.eligible?(Funder.find(@recipient.recipient_funder_accesses.last.funder_id))}'
    });

= render partial: 'recipients/funders/subnav'

.uk-container.uk-container-center.uk-margin-large
  .uk-grid
    .uk-width-medium-2-3
      %h2 Recommended funders
      %h4 You are seeing funders that Beehive thinks would be suitable for you.

    -# refactor
    -# - if @recipient.has_proposal?
    -#   .uk-width-medium-1-3.uk-text-right.uk-margin-top
    -#     .muted Recommendations for
    -#     %a{href: edit_recipient_proposal_path(@recipient, @recipient.proposals.first)}= @recipient.proposals.first.title.truncate(44)

  .uk-width-large-4-5.uk-container-center.uk-margin-large-top.uk-animation-fade

    = render partial: 'cta/proposal_cta', locals: { recipient: @recipient }

    - @funders.each_with_index do |funder, i|
      = render partial: 'recipients/funders/summary', locals: { funder: funder }
      - if i == @funders.count-1
        .cta.wide
          Want to see more?
          %a.uk-button.uk-button-large.uk-button-primary.invert{href: funders_path} All funders
      - else
        %hr.thick

