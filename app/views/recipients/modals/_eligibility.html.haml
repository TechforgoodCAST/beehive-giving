- funder = Funder.find(@recipient.unlocked_funders.first.id)

#eligibility.uk-modal
  .uk-modal-dialog
    .uk-width-1-1.uk-text-center
      .uk-container-center.uk-border-circle.uk-vertical-align.shadow{style: 'background: #fff; height: 160px; width: 160px; border: 3px solid #F7BA0E; position: relative;'}
        - if @recipient.recommended_funder?(@funder) && @recipient.profiles.count > 0
          .funder-logo-banner.shadow
            %p Suggested
        .uk-vertical-align-middle
          .funder{class: "#{@funder.slug}-small", alt: "#{@funder.name} Logo"}
      %h2
        You've unlocked
        = succeed '!' do
          = funder.name
      %p Well done, you've unlocked your first funder. Before investing any more time in reasearch, why not check to see if you're eligible for their support?
    .uk-modal-footer.uk-text-center
      = link_to 'Am I eligible?', recipient_eligibility_path(funder), :"data-no-turbolink" => true, class: 'uk-button uk-button-primary uk-width-2-5'

:javascript
  var modal = $.UIkit.modal("#eligibility");
  modal.options.bgclose = false;
  modal.options.keyboard = false;
  modal.show();
