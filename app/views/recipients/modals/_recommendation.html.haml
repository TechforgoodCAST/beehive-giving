:javascript
  mixpanel.track_links(".js-record-recommendation-close", "Click 'Show me my recommendations");

#recommendation.uk-modal
  .uk-modal-dialog
    .uk-modal-header
      %h2 Your funder recommendations are ready!
    %p
      You can spot your recommended funders by the little
      %i.uk-icon.uk-icon-star.uk-icon-small.yellow
      icon.
    %p Once you find a funder you think would be a good fit hit the 'Check eligibility' button for more information and to see how to approach them for support.
    .uk-modal-footer.uk-text-center
      %a.uk-button.uk-button-primary.uk-modal-close.uk-width-2-5.js-record-recommendation-close Show me my recommendations

:javascript
  var modal = $.UIkit.modal("#recommendation");
  modal.options.bgclose = false;
  modal.options.keyboard = false;
  modal.show();
