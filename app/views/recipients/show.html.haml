.uk-container.uk-container-center
  .uk-width-medium-1-3.uk-float-left
    %h1= @recipient.name
    %hr
    %h3 Grants recieved

    %ul
      - @grants.each do |grant|
        %li
          = grant.funder.name
          |
          = number_to_currency(grant.amount_awarded)
  .uk-width-medium-2-3.uk-float-right
    .uk-panel.uk-panel-box
      %h3.uk-text-bold.uk-text-center Timeline
      #time_line
