:javascript
  mixpanel.track("Page View", {"Page Name": "Create Organisation Page"});
  mixpanel.track_forms("#new_recipient", "Create Organisation Form");

- content_for :signup do
  #bg-color.tm-section-color-1
    .uk-container.uk-container-center.uk-animation-fade
      .uk-margin-large.uk-margin-large-top
        .uk-width-1-1.uk-text-center
          %h4
            %span.uk-text-muted
              Sign up
              %i.uk-icon.uk-icon-angle-right.uk-icon-small
            Register

        .uk-width-1-1
          .uk-text-center.uk-container-center
            %h2 Last step, and you'll be registered
            %p.uk-text-large Your funding recommendations are waiting.
          .uk-width-large-1-2.uk-container-center.uk-margin-top
            .uk-form.uk-form-stacked.uk-panel.uk-panel-box#panel.shadow
              .uk-panel-title About your organisation
              = simple_form_for [@organisation], url: signup_organisation_path, method: :post do |f|
                = render partial: 'organisations/form', locals: {f: f}
