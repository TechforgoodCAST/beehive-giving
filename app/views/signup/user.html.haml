:javascript
  mixpanel.track("Page View", {"Page Name": "Welcome Page"});
  mixpanel.track_forms("#new_user", "Create User Form");

.tm-section.tm-section-color-1.tm-section-colored
  .uk-container.uk-container-center.uk-text-center

    .uk-width-medium-1-1
      %h1
        Quickly and easily see if you're
        %br non-profit is a good fit for funding
      %p.uk-text-large Get funder recommendations and check to see if your non-profit is eligible

    .uk-width-medium-1-3.uk-margin-top.uk-container-center
      .uk-form.uk-form-stacked.uk-panel.uk-panel-box#panel.shadow
        %h4.uk-text-bold Are you a non-profit?
        = simple_form_for [@user], url: signup_user_path, method: :post do |f|
          .uk-grid
            .uk-width-large-1-2.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :first_name, error: false, type: 'text', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :first_name, class: 'uk-text-small uk-text-warning'
            .uk-width-large-1-2.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :last_name, error: false, type: 'text', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :last_name, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :job_role, error: false, type: 'text', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :job_role, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :user_email, error: false, type: 'email', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :user_email, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :password, error: false, type: 'password', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :password, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-margin-bottom
              .uk-form-controls{style: 'position: relative;'}
                = f.input :password_confirmation, error: false, type: 'email', input_html: { class: 'uk-width-1-1' }
                .uk-form-password-toggle
                  = f.error :password_confirmation, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-margin-bottom
              .uk-form-controls.uk-text-muted
                Accept
                = link_to 'terms of service', '#terms', class: 'blue', onclick: "window.open('#{terms_path}','Terms of Service','width=600,height=400')"
                and
                = succeed '?' do
                  = link_to 'privacy policy', '#privacy', class: 'blue', onclick: "window.open('#{privacy_path}','Privacy Policy','width=600,height=400')"
                = f.input_field :agree_to_terms, error: false, checked: true
                = f.error :agree_to_terms, class: 'uk-text-small uk-text-warning'
            .uk-width-medium-1-1.uk-text-truncate
              = f.button :button, "Sign up (for free!)", class: 'uk-button uk-button-primary uk-width-1-1 uk-button-large shadow bounce', style: 'color: #fff; font-size:16px;', data: {disable_with: "<i style='color: #999;' class='uk-icon uk-icon-circle-o-notch uk-icon-spin'></i><span style='color: #999;'> Signing up...</span>"}

      %p
        %span.stat
          = succeed '+' do
            = Funder.active.count
          %span.uk-text-small funders
        %span.stat
          |
        %span.stat
          18+
          %span.uk-text-small thousand grants

#bg-color
