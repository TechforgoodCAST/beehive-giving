.tm-section-color-2
  .uk-container.uk-container-center
    .uk-grid.uk-margin-large.uk-margin-large-top
      .uk-width-medium-3-4.uk-margin.uk-float-left
        .uk-grid
          .uk-width-medium-2-3
            .uk-panel.uk-panel-box.uk-margin-bottom
              %h3.uk-text-bold.uk-text-center
                Number of grants given
                %a{"data-uk-toggle" => "{target:'#grants_given_data'}"}
                  %i.uk-icon-info-circle
              %p#grants_given
              %table.uk-table.uk-table-hover.uk-hidden#grants_given_data
                %caption Data table
                %thead
                  %tr
                    %th Year
                    %th Average
                    %th Minimum
                    %th Maximum
                %tbody
                  %tr
                    %th 2014
                    %td 4 grants
                    %td 3 grants
                    %td 5 grants
                  %tr
                    %th 2013
                    %td ~8 grants
                    %td 7 grants
                    %td 8 grants
          .uk-width-medium-1-3.uk-margin-bottom
            .uk-panel.uk-panel-box
              %h3.uk-text-bold.uk-text-center
                Nov 2014 grants round
                %a{"data-uk-toggle" => "{target:'#grants_stages_data'}"}
                  %i.uk-icon-info-circle
              %p#grants_stages
              %table.uk-table.uk-table-hover.uk-hidden#grants_stages_data
                %caption Data table
                %thead
                  %tr
                    %th Stage
                    %th %
                    %th Count
                %tbody
                  %tr
                    %td Grant
                    %td 5%
                    %td 3
                  %tr
                    %td Application
                    %td 9%
                    %td 5
                  %tr
                    %td Enquiry
                    %td 86%
                    %td 48
                %tfoot
                  %tr
                    %td Total
                    %td 100%
                    %td 56
          .uk-width-medium-2-3
            .uk-panel.uk-panel-box.uk-margin-bottom
              %h3.uk-text-bold.uk-text-center Percentage(%) of grants by size
              %p#grants_distribution

      .uk-width-medium-1-4.uk-float-right
        .uk-panel.uk-panel-box{"data-uk-sticky" => "{top:60}"}
          .uk-text-center
            #org-logo.ff The Foundation
            %p We transform young lives by discovering ideas that shake up the way things are done.
          .uk-grid
            %dl.uk-description-list.uk-width-medium-1-1
              %dt.uk-text-small Invitations to next funding round:
              %dd May 2015
              %dt.uk-text-small.uk-margin-top Time from enquiry to funding:
              %dd May 2015
              %dt.uk-text-small.uk-margin-top Invitations to next funding round:
              %dd Avg: 24 weeks
              %dd Min: 14 weeks
              %dd Max: 38 weeks
              %dt.uk-text-small.uk-margin-top Funding round frequency
              %dd Avg: 25 weeks


