- content_for :signup do
  .tm-section-color-2
    .uk-container
      .uk-margin-large.uk-margin-large-top
        .uk-vertical-align.uk-text-center{:style => "height: 480px;"}
          .uk-width-large-1-2.uk-vertical-align-middle
            .uk-animation-fade
              .uk-form.uk-form-stacked.uk-panel.uk-panel-box
                .uk-panel-title Are you a registered charity in England and Wales?
                = form_for '/find' do
                  .uk-width-medium-1-1
                    .uk-form-controls
                      = select_tag :uk_charity, options_for_select([['Yes', true], ['No', false]]), { include_blank: true, class: 'uk-width-1-1 js-registered-toggle' }

                  .uk-width-medium-1-1.js-registered-toggle-target.uk-hidden
                    .uk-grid
                      .uk-width-medium-1-1.uk-margin-top
                        .uk-form-controls
                          = text_field_tag :charity_number, nil, { class: 'uk-width-1-1', placeholder: 'Charity no.' }
                  .uk-width-medium-1-1.uk-margin-top
                    = submit_tag 'Next', class: 'uk-button uk-button-primary uk-width-1-1', style: 'color: #fff;'
              .uk-text-small.uk-margin-small-top= link_to 'Skip this step', signup_organisation_path
