= stylesheet_link_tag 'overrides/morris_overrides'
= javascript_include_tag 'raphael'
= javascript_include_tag 'morris'
= javascript_include_tag '//www.google.com/jsapi', 'chartkick'

= render partial: 'funders/subnav', locals: {funder: @funder}

.uk-container.uk-container-center.uk-margin-large.uk-margin-large-top.uk-animation-fade
  .uk-grid
    .uk-width-medium-1-3
      .card{"data-uk-sticky" => "{top:120, media: 767}"}
        %a{href: funder_path(@funder), alt: @funder.name}
          .thumbnail
            .funder{class: @funder.slug}
        .details
          -# .content.center
          -#   %h3= @funder.name
          -#   = @funder.mission
          .content.center
            = funder_card_cta_button_copy(@recipient, @funder)

    .uk-width-medium-2-3

      -# - if @recipient.load_recommendation(@funder).eligibility
      -#   - if @recipient.eligible?(@funder)
      -#     .cta.wide.tight.green
      -#       You are eligible for funding.
      -#       .uk-button.uk-button-large.uk-button-success.invert See criteria
      -#   - else
      -#     .cta.wide.tight.red
      -#       You are ineligible for funding.
      -#       .uk-button.uk-button-large.uk-button-danger.invert Find out why

      %section
        %h3.uk-margin-top
          Summary
          %span.year.muted
            in
            = @funder.current_attribute.year

        = render partial: 'recipients/funders/insights', locals: {funder: @funder}

        %hr.thick

      %section
        %h3.uk-margin-top
          How much funding was awarded?
          %span.year.muted
            in
            = @funder.current_attribute.year
        #funding_frequency_distribution.chart{ data: {data: funding_frequency_distribution(@funder, @year_of_funding).to_json} }
        %hr.thick

      %section
        %h3.uk-margin-top
          When was funding awarded?
          %span.year.muted
            in
            = @funder.current_attribute.year
        #funding_frequency_distribution.chart{ data: {data: funding_frequency_distribution(@funder, @year_of_funding).to_json} }
        %hr.thick

      %section
        %h3.uk-margin-top
          Where was funding awarded?
          %span.year.muted
            in
            = @funder.current_attribute.year
        = geo_chart @funder.countries_by_year.group(:name).count, library: {colorAxis: {colors: ['#f5e8c4', '#fadc89', '#f5b918']}, tooltip: {textStyle: {color: '#353f45'}}}
