.uk-container.uk-container-center
  .uk-grid.uk-margin.uk-margin-top
    .uk-width-1-1.uk-margin
      .uk-form.uk-form-stacked.uk-panel.uk-panel-box
        = search_form_for @search do |f|
          %fieldset
            %legend Funder
            %ul
              %li
                = f.label :name_cont
                = f.text_field :name_cont
              = f.submit

      %table.uk-table.uk-table-hover
        %thead
          %tr
            %th= sort_link @search, :name, "Funder"
        %tbody
        - @funders.each do |funder|
          %tr
            %td= funder.name
