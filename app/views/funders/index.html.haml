#bg-color{style: 'min-height: 550px;'}
  .uk-container.uk-container-center
    .uk-grid.uk-margin
      .uk-width-1-1.uk-margin
        %h1.uk-margin-top.uk-hidden Funders

        .uk-margin#suitable_funders
          .uk-grid.uk-margin-top.uk-animation-fade{"data-uk-grid-match" => ""}
            - if current_user_should_render_welcome_modal?
              = render partial: 'funders/static_background'

            - else
              .uk-width-1-1.uk-margin-large-top.uk-margin-bottom
                %h2.uk-text-center.upcase.uk-margin-bottom
                  Recommended funders
                  %span.uk-text-small Beta

              - @recipient.recommended_funders.limit(Recipient::RECOMMENDATION_LIMIT).each do |funder|
                .uk-width-medium-1-2.uk-width-large-1-3.uk-margin-bottom
                  = render :partial => 'funder_card', :locals => { :funder => funder }

        .uk-text-center.uk-margin-large-bottom
          = link_to 'Show all funders', funders_path, remote: true, class: 'uk-button shadow', id: 'toggle_funders', data: {disable_with: "<i style='color: #999;' class='uk-icon uk-icon-circle-o-notch uk-icon-spin'></i><span style='color: #999;'> Fetching funders...</span>"}

        #search_results.uk-hidden

- if current_user_should_render_welcome_modal?
  = render :partial => 'recipients/modals/welcome'
