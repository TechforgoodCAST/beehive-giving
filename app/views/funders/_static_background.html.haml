#bg-color
  .uk-container.uk-container-center.uk-animation-fade
    .uk-grid.uk-margin-top.uk-animation-fade{"data-uk-grid-match" => ""}
      - Funder.all.sample(12).each do |funder|
        .uk-width-medium-1-2.uk-width-large-1-3.uk-margin-bottom
          .uk-width-1-1.uk-panel#panel.shadow
            .uk-panel-teaser.uk-text-center.uk-vertical-align{style: 'height: 100px;'}
              .uk-vertical-align-middle
                .funder{class: "#{funder.slug}", alt: "#{funder.name} Logo"}
            .uk-panel-box{style: 'height: 60px;'}
              .uk-width-1-1
                = truncate("#{funder.mission}", length: 120, separator: ' ')
