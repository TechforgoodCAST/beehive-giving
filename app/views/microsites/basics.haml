%main
  .maxw1080.mx-auto.px20.flex.flex-wrap
    %aside.perc25.md.px20.mb40
      Progress

    %section.perc75.md.mb80.px20
      %h1.mb40= @funder.name

      = simple_form_for @microsite.step, url: microsite_basics_path do |f|
        .mb20
          %label.block.fs15.bold.mb10 What type of grant funding?
          = f.input :funding_type, collection: FUNDING_TYPES
        .mb20
          %label.block.fs15.bold.mb10 How much funding are you seeking?
          = f.input :total_costs, as: :currency
        .mb20
          %label.block.fs15.bold.mb10 Who will be receiving the funding?
          = f.input :org_type, collection: ORG_TYPES
        = f.button :button, 'Next', class: 'button white bg-olive caps truncate', data: { disable_with: 'Saving...' }