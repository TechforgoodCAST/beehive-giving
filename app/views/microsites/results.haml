= content_for :title, "Results - Should you apply to #{@funder.name}?"

%main
  %section.bg-ice
    .maxw1080.mx-auto.p20.mb40
      .perc75.md.px20.mx-auto.center
        %h2.fs22
          Should you apply to
          = succeed '?' do
            = @funder.name

  .maxw1080.mx-auto.px20
    %section.perc75.md.mb40.mx-auto.px20
      .flex.justify-between.items-center
        %h6.mx-auto.slate Basics
        .slate ❯
        %h6.mx-auto.slate Eligibility
        .slate ❯
        %h6.mx-auto.bold.blue Results

    %section.perc75.md.mx-auto

      .flex.justify-between.items-baseline.p20.bg-ice.rounded
        %h1.fs30 Results
        .fs18.night
          = pluralize(@funder.funds.active.count, 'fund')
          checked

      - @funds.each do |fund|
        .mt40.border.border-silver.rounded.shadow
          .p20
            .flex.justify-between.items-center
              .flex.items-center
                - opts = { proposal: @proposal, fund: fund }
                .dot.mr20{ class: Progress::Eligibility.new(opts).indicator }
                %div
                  %h3.mb5= fund.name
                  .fs15.night
                    by
                    = @funder.name
              %div
                - if @proposal.eligible_status(fund.slug).positive?
                  = link_to 'Apply ❯', fund.application_link, target: '_blank', class: 'fs15 btn white bg-blue shadow'
                - else
                  = link_to 'More funds', new_password_reset_path, class: 'fs15 btn blue border border-blue'

          .p20.border-top.border-silver
            %h6.bold.mb10= cell(:fund_insight, fund, proposal: @proposal).call(:summary)
            .night= raw strip_tags(fund.description_html).truncate_words(30, omission: "... #{link_to 'more on Beehive', '/'}")

          .bg-ice= cell(:eligibility, @proposal, fund: fund).call(:analysis)