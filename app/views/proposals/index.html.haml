= content_for :title, 'Your funding proposals'

:javascript
  mixpanel.track('View Proposals Index Page');

%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, 'Proposals' => proposals_path

%main
  .maxw1080.mx-auto.px20

    %section.md.mb20.px20
      %h1.light.mb20 Dashboard

    %nav.md.mb40.px20
      %ul.border-bottom.border-lightest-gray.fs14
        %li.mr20.py10.inline-block
          = link_to 'Account', account_path, class: 'blue'
        %li.mr20.py10.inline-block
          = link_to 'Organisation', account_organisation_path(@recipient), class: 'blue'
        %li.mr20.py10.inline-block
          = link_to 'Subscription', account_subscription_path(@recipient), class: 'blue'
        %li.mr20.py10.inline-block.border-bottom-thick.border-blue
          = link_to 'Proposals', proposals_path, class: 'blue'

    %section.md.mb20.px20.flex-wrap.flex.dashboard-columns
      .mb20.border.rounded.border-lightest-gray.bg-lightest-gray.p15.shadow
        %h2.fs22
          Your proposals

      - @proposals.each do |proposal|
        .mb20.border.rounded.border-lightest-gray.proposal
          = render partial: 'proposals/card', locals: { proposal: proposal }
          .fs16.center.py15.border-top.border-lightest-gray
            - if model.registered? || model.complete?
              = link_to 'Funds', proposal_funds_path(model), class: 'red px15'
              = link_to 'Edit', edit_proposal_path(model), class: 'blue px15'
            - else
              = link_to 'Complete', edit_signup_proposal_path(model), class: 'blue px15'
      
      .mb20
        - if @proposal.complete?
          - if @recipient.subscribed?
            = link_to "+ New proposal", new_proposal_path, class: 'button-wide bg-green white fs16 caps'
          - else
            %div.mb30
              Upgrade to add new proposals
            = link_to '+ New proposal', account_upgrade_path(@recipient), class: 'button-wide bg-green white fs16 caps'
        - else
          = link_to '+ New proposal', edit_signup_proposal_path(@proposal), class: 'button-wide bg-green white fs16 caps'
