= content_for :title, 'Edit Profile'

:javascript
  mixpanel.track("View Edit Profile Page");
  mixpanel.identify("#{@current_user.id}");

%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, 'Account' => account_path

%main
  .maxw1080.mx-auto.px20

    %section.md.mb20.px20
      %h1.light.mb20 Dashboard

    %nav.md.mb40.px20
      %ul.border-bottom.border-lightest-gray.fs14
        %li.mr20.py10.inline-block.border-bottom-thick.border-blue
          = link_to 'Account', account_path, class: 'blue'
        %li.mr20.py10.inline-block
          = link_to 'Organisation', account_organisation_path(@recipient), class: 'blue'
        %li.mr20.py10.inline-block
          = link_to 'Subscription', account_subscription_path(@recipient), class: 'blue'
        %li.mr20.py10.inline-block
          = link_to 'Proposals', proposals_path, class: 'blue'

  .maxw1080.mx-auto.px20.flex.flex-wrap
    %aside.perc25.md.px20.mb40
      %h2.light.mb20 Profile
      %h4.light Update your personal account details.


    %section.perc75.md.mb80.px20.fs14
      = simple_form_for @current_user, url: account_path do |f|

        = cell(:user_form, @current_user, f: f)
        = cell(:submit_form, @current_user, f: f, button_text: 'Update', disable_with_text: 'Saving')
