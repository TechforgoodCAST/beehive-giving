= content_for :title, 'Edit Profile'

:javascript
  mixpanel.track("View Edit Profile Page");
  mixpanel.identify("#{@current_user.id}");

%header
  = cell :v2_navbar, @current_user
  = cell :breadcrumb, 'Account' => account_path

%main
  .maxw1080.mx-auto.px20

    %section.md.mb20.px20
      %h1.mb20 Dashboard

    = render partial: 'accounts/subnav'

  .maxw1080.mx-auto.px20.flex.flex-wrap
    %aside.perc25.md.px20.mb40
      %h2.mb20 Profile
      %h4 Update your personal account details.

    %section.perc75.md.mb80.px20.fs15
      = simple_form_for @current_user, url: account_path do |f|

        = cell(:user_form, @current_user, f: f)
        = cell(:submit_form, @current_user, f: f, button_text: 'Update', disable_with_text: 'Saving')
